{
    "name": "mikespub/seblucas-cops",
    "description": "Calibre OPDS (and HTML) PHP Server : web-based light alternative to Calibre content server / Calibre2OPDS to serve ebooks (epub, mobi, pdf, ...)",
    "authors": [
        {
            "name": "seblucas",
            "homepage": "https://github.com/seblucas/cops",
            "role": "Developer"
        },
        {
            "name": "mikespub",
            "homepage": "https://github.com/mikespub-org/seblucas-cops",
            "role": "Developer"
        }
    ],
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.4",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo_sqlite": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "mikespub/epubjs-reader": "^2026.1",
        "mikespub/php-epub-meta": "^4.0",
        "mikespub/web-comic-reader": "^2026.1",
        "mozilla/pdfjs-dist": "^5.4",
        "npm-asset/bootstrap": "^3.4",
        "npm-asset/dot": "^1.1",
        "npm-asset/jquery": "^3.7",
        "npm-asset/js-cookie": "^3.0",
        "npm-asset/lru-fast": "^0.2",
        "npm-asset/magnific-popup": "^1.2",
        "npm-asset/normalize.css": "^8.0",
        "npm-asset/corejs-typeahead": "^1.3",
        "npm-asset/twig": "^1.17",
        "phpmailer/phpmailer": "^7.0",
        "symfony/config": "^7.4 || ^8.0",
        "symfony/http-foundation": "^7.4 || ^8.0",
        "symfony/routing": "^7.4 || ^8.0",
        "symfony/string": "^7.4 || ^8.0",
        "symfony/translation-contracts": "^3.6",
        "twig/twig": "^3.23"
    },
    "require-dev": {
        "kiwilan/php-opds": "^2.2",
        "phpunit/phpunit": "^12.5 || ^13.0",
        "php-webdriver/webdriver": "dev-main",
        "symfony/browser-kit": "^7.4 || ^8.0",
        "symfony/http-client": "^7.4 || ^8.0",
        "nikic/fast-route": "2.0.0-beta1",
        "mikespub/epub-loader": "^4.0",
        "mikespub/codedread-kthoom": "^2026.1",
        "opis/json-schema": "^2.6",
        "webonyx/graphql-php": "^15.30"
    },
    "suggest": {
        "mikespub/epub-loader": "epub-loader is a utility package for ebooks",
        "mikespub/codedread-kthoom": "Comic Book Reader alternative for web-comic-reader"
    },
    "autoload": {
        "classmap": [
            "src/",
            "resources/",
            "tests/"
        ],
        "files": [
            "src/functions.php"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "mozilla/pdfjs-dist",
                "description": "Legacy build for PDF.js from official release",
                "version": "5.4.624",
                "homepage": "https://github.com/mozilla/pdf.js/wiki/Setup-pdf.js-in-a-website",
                "license": "Apache-2.0",
                "dist": {
                    "url": "https://github.com/mozilla/pdf.js/releases/download/v5.4.624/pdfjs-5.4.624-legacy-dist.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
        }
    }
}
